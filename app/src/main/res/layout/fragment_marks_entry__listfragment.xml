<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/editLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/branch"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/caddress"
                android:background="@android:color/transparent"
                android:hint="Select Branch"
                android:maxLines="1"
                android:paddingLeft="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/caddress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/task"
                app:tint="@color/blue"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/standard"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/gst"
                android:background="@android:color/transparent"
                android:hint="Select Standard"
                android:maxLines="1"
                android:paddingLeft="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="13dp" />
            <ImageView
                android:id="@+id/gst"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/sales_no"
                app:tint="@color/blue"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/editLinear"
        android:id="@+id/bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/batch_time"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/pincodeimg111"
                android:background="@android:color/transparent"
                android:hint="Select Batch Time"
                android:maxLines="1"
                android:paddingLeft="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/pincodeimg111"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/time"
                app:tint="#0074AA" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/test_date"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/mobile15"
                android:background="@android:color/transparent"
                android:hint="Test Date"
                android:maxLines="1"
                android:paddingLeft="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/mobile15"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/date"
                app:tint="#0074AA" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rc"
        android:layout_below="@id/bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/border">

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/pincodeimg1111"
            android:background="@android:color/transparent"
            android:hint="Select Subject"
            android:maxLines="1"
            android:paddingLeft="9dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/pincodeimg1111"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/task"
            app:tint="#0074AA" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Clear"
                android:textSize="16dp"
                android:background="@drawable/blue_fill__rounded_color"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_fill__rounded_color"
                android:text="Search"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </RelativeLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/marks_entry_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonLinear"
        android:layout_marginTop="8dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/no_content"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="No Data Found"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@id/buttonLinear"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/MyFabOverlay"
        android:id="@+id/fab_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_add_black_24dp"/>

</RelativeLayout>