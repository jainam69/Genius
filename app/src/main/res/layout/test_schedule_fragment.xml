<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.Test_Schedule.test_schedule_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/standard"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/caddress"
                        android:background="@android:color/transparent"
                        android:hint="Select Standard"
                        android:maxLines="1"
                        android:paddingLeft="9dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/caddress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/sales_no"
                        app:tint="@color/blue" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/batch_time"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/gst"
                        android:background="@android:color/transparent"
                        android:hint="Batch Time"
                        android:maxLines="1"
                        android:paddingLeft="9dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/gst"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/branch"
                        app:tint="@color/blue" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/subject"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/caddress3"
                        android:background="@android:color/transparent"
                        android:hint="Select Subject"
                        android:maxLines="1"
                        android:paddingLeft="9dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/caddress3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/branch"
                        app:tint="@color/blue" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <EditText
                        android:id="@+id/marks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/pincodeimg1"
                        android:background="@android:color/transparent"
                        android:hint="Total Marks"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/pincodeimg1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/sales_no"
                        app:tint="#0074AA" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border">

                <EditText
                    android:id="@+id/test_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/company1"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Test Date"
                    android:maxLines="1"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/company1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/date"
                    app:tint="#0074AA" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <EditText
                        android:id="@+id/start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/pincodeimg11"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Test start time"
                        android:maxLines="1"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/pincodeimg11"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/time"
                        app:tint="#0074AA" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <EditText
                        android:id="@+id/end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/mobile1"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Test End Time"
                        android:maxLines="1"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/mobile1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/time"
                        app:tint="#0074AA" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border">

                <EditText
                    android:id="@+id/remarks"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@+id/addressimg19"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:hint="Remarks"
                    android:inputType="textMultiLine|textCapWords"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="12dp"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/addressimg19"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/task"
                    app:tint="#0074AA" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/paper_type"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/transprt120"
                        android:background="@android:color/transparent"
                        android:hint="Select Paper Type"
                        android:maxLines="1"
                        android:paddingLeft="9dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/transprt120"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_attach"
                        app:tint="@color/blue" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linear_save"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="end">

                    <Button
                        android:id="@+id/save_testschedule"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/blue_fill"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linear_edit"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/edit_testschedule"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/blue_fill"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linear_doc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:visibility="gone">

                <TextView
                    android:id="@+id/upload_test_paper"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@+id/transprt12"
                    android:layout_toRightOf="@+id/transprt12"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="true"
                    android:focusedByDefault="false"
                    android:hint="Upload Test Paper"
                    android:importantForAutofill="no"
                    android:maxLines="1"
                    android:paddingStart="9dp"
                    android:paddingLeft="9dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="13dp"
                    tools:ignore="Deprecated,HardcodedText,RtlSymmetry"
                    tools:targetApi="o" />


                <ImageView
                    android:id="@+id/transprt12"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_attach"
                    app:tint="@color/blue" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linear_link"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:visibility="gone">

                <EditText
                    android:id="@+id/upload_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/transprt123"
                    android:background="@android:color/transparent"
                    android:hint="Upload Link"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/transprt123"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_link"
                    app:tint="@color/blue" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linear_remarks"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border"
                android:visibility="gone">

                <EditText
                    android:id="@+id/paper_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@+id/addressimg191"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:hint="Remarks"
                    android:inputType="textMultiLine|textCapWords"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="12dp"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/addressimg191"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/task"
                    app:tint="#0074AA" />

            </RelativeLayout>

            <Button
                android:id="@+id/save_test_paper"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/blue_fill"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/edit_test_paper"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/blue_fill"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/test_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/paper_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>