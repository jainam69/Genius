<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Announcement.Announcement_Fragment">

    <LinearLayout
        android:id="@+id/linear_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/border">

                <EditText
                    android:id="@+id/announcement_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tlimit"
                    android:background="@android:color/transparent"
                    android:hint="Announcement Title"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="12sp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/tlimit"
                    android:layout_width="24dp"
                    app:tint="@color/blue"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_edit" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border">

            <EditText
                android:id="@+id/announcement_description"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_toEndOf="@+id/addressimg"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="Announcement Description"
                android:importantForAutofill="no"
                android:inputType="textMultiLine|textCapWords"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="5dp"
                android:paddingBottom="12dp"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/addressimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/order"
                app:tint="@color/blue" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/border">

             <!--   <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:entries="@array/branch"
                    android:id="@+id/branch_type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/globeimg"
                    android:background="@android:color/transparent"
                    app:hintText="Select Branch"
                    android:inputType="text"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="15dp" />
-->
                <ImageView
                    android:id="@+id/globeimg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/dist"
                    app:tint="#0074AA" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border">

               <!-- <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:id="@+id/user_type_spinner"
                    android:entries="@array/user"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/districtimg"
                    android:background="@android:color/transparent"
                    app:hintText="Select User"
                    android:inputType="text"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="15dp" />-->

                <ImageView
                    android:id="@+id/districtimg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/user" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="end">

            <Button
                android:id="@+id/add_announcement"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:background="@drawable/blue_fill"
                android:text="Add "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:visibility="gone"
                android:id="@+id/reset"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:background="@drawable/blue_fill__rounded_color"
                android:text="Reset"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_rcview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:overScrollMode="never"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>