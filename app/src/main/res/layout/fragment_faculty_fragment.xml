<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/sp_faculty"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/gst"
                android:background="@android:color/transparent"
                android:hint="Select Faculty"
                android:maxLines="1"
                android:paddingLeft="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="13dp" />
            <ImageView
                android:id="@+id/gst"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/user"
                app:tint="@color/blue"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/sp_course"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/gst1"
                android:background="@android:color/transparent"
                android:hint="Select Course"
                android:maxLines="1"
                android:paddingLeft="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="13dp" />
            <ImageView
                android:id="@+id/gst1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/course"
                app:tint="@color/blue"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/sp_class"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/pincodeimg111"
                android:background="@android:color/transparent"
                android:hint="Select Class"
                android:maxLines="1"
                android:paddingLeft="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/pincodeimg111"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/branchclass"
                app:tint="#0074AA" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/sp_subject"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/gst2"
                android:background="@android:color/transparent"
                android:hint="Select Subject"
                android:maxLines="1"
                android:paddingLeft="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="13dp" />
            <ImageView
                android:id="@+id/gst2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/subject"
                app:tint="@color/blue"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/attachment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toEndOf="@+id/transprt12"
            android:layout_toRightOf="@+id/transprt12"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:editable="false"
            android:focusable="true"
            android:focusedByDefault="false"
            android:hint="Upload Faculty Image"
            android:importantForAutofill="no"
            android:maxLines="1"
            android:paddingStart="9dp"
            android:paddingLeft="9dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:ignore="Deprecated,HardcodedText,RtlSymmetry"
            tools:targetApi="o" />


        <ImageView
            android:id="@+id/transprt12"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_attach"
            app:tint="@color/blue"
            android:layout_marginLeft="12dp" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/view_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:contentDescription="@string/app_name" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border">

        <EditText
            android:id="@+id/faculty_description"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/addressimg19"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Description"
            android:inputType="textMultiLine|textCapWords"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="5dp"
            android:paddingBottom="12dp"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/addressimg19"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/address"
            app:tint="#0074AA" />

    </RelativeLayout>

    <Button
        android:layout_marginBottom="10dp"
        android:id="@+id/save_faculty"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_fill"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <Button
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:id="@+id/edit_faculty"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_fill"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"/>

</LinearLayout>