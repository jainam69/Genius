<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.Library_Fragment.library_fragment">

    <TextView
        android:id="@+id/lib_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/master_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/uniqid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/transactionid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/libraryid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border">

                <EditText
                    android:id="@+id/library_title"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@+id/addressimg22"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:hint="Title"
                    android:inputType="textMultiLine|textCapWords"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="12dp"
                    android:textSize="15sp"
                    tools:ignore="Autofill,HardcodedText" />

                <ImageView
                    android:id="@+id/addressimg22"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/task"
                    app:tint="#0074AA"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/border">

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@+id/caddress1"
                    android:background="@android:color/transparent"
                    android:hint="Select Category"
                    android:maxLines="1"
                    android:paddingStart="9dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <ImageView
                    android:id="@+id/caddress1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/sales_no"
                    app:tint="@color/blue"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:text="Select Branch"
                android:textColor="#0074AA"
                android:textSize="15dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:buttonTint="@color/blue"
                    android:checked="true"
                    android:text="All" />

                <RadioButton
                    android:id="@+id/branch_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:buttonTint="@color/blue"
                    android:text="" />

            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border">

                <EditText
                    android:id="@+id/library_video_link"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@+id/addressimg23"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:hint="Video link"
                    android:inputType="textMultiLine|textCapWords"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="12dp"
                    android:textSize="15sp"
                    tools:ignore="Autofill,HardcodedText" />

                <ImageView
                    android:id="@+id/addressimg23"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/task"
                    app:tint="#0074AA"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1.2"
                    android:text="Select Type"
                    android:textColor="#0074AA"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/rb_general"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#0074AA"
                        android:checked="true"
                        android:text="General" />

                    <RadioButton
                        android:id="@+id/rb_standard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#0074AA"
                        android:text="Standard" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/border">

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/course_name"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_toEndOf="@+id/gst7"
                            android:background="@android:color/transparent"
                            android:hint="Select Course"
                            android:maxLines="1"
                            android:paddingStart="9dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <ImageView
                            android:id="@+id/gst7"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/branch"
                            app:tint="@color/blue"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border">

                        <com.example.genius.ui.MultiSelectionSpinner
                            android:id="@+id/standard"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_toEndOf="@+id/caddress"
                            android:background="@android:color/transparent"
                            android:hint="Select Standard"
                            android:maxLines="1"
                            android:paddingStart="9dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <ImageView
                            android:id="@+id/caddress"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/standard"
                            app:tint="@color/blue"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/subject"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_toEndOf="@+id/gst"
                        android:background="@android:color/transparent"
                        android:hint="Select Subject"
                        android:maxLines="1"
                        android:paddingStart="9dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                    <ImageView
                        android:id="@+id/gst"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/task"
                        app:tint="@color/blue"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border">

                <EditText
                    android:id="@+id/library_description"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@+id/addressimg19"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:hint="Document Description"
                    android:inputType="textMultiLine|textCapWords"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="12dp"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/addressimg19"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/task"
                    app:tint="#0074AA" />

            </RelativeLayout>

            <Button
                android:id="@+id/save_library"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/blue_fill"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/edit_library"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/blue_fill"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>