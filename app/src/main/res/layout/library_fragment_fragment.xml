<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Library_Fragment.library_fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lib_id"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/master_id"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uniqid"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transactionid"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/libraryid"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:text="Select Branch"
            android:textColor="#0074AA"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:buttonTint="@color/blue"
                android:checked="true"
                android:text="All" />

            <RadioButton
                android:id="@+id/branch_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:buttonTint="@color/blue"
                android:text="" />

        </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/attach_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toEndOf="@+id/transprt12"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"
                android:focusedByDefault="false"
                android:hint="Upload Thumbnail"
                android:importantForAutofill="no"
                android:maxLines="1"
                android:paddingStart="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="13dp"
                tools:ignore="Deprecated,HardcodedText,RtlSymmetry"
                tools:targetApi="o"
                android:paddingLeft="9dp"
                android:layout_toRightOf="@+id/transprt12" />


            <ImageView
                android:id="@+id/transprt12"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_attach"
                app:tint="@color/blue"
                android:layout_marginLeft="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/attach_document"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toEndOf="@+id/transprt121"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"
                android:focusedByDefault="false"
                android:hint="Upload Document"
                android:importantForAutofill="no"
                android:maxLines="1"
                android:paddingStart="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="13dp"
                tools:ignore="Deprecated,HardcodedText,RtlSymmetry"
                tools:targetApi="o"
                android:paddingLeft="9dp"
                android:layout_toRightOf="@+id/transprt121" />


            <ImageView
                android:id="@+id/transprt121"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_attach"
                app:tint="@color/blue"
                android:layout_marginLeft="12dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:text="Select Type"
            android:textColor="#0074AA"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_weight="1.2"/>

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_weight="0.5"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/rb_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#0074AA"
                android:checked="true"
                android:text="General" />

            <RadioButton
                android:id="@+id/rb_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#0074AA"
                android:text="Standard" />

        </RadioGroup>
    </LinearLayout>

            <LinearLayout
               android:visibility="gone"
                android:id="@+id/linear_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/border">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/standard"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/caddress"
                        android:background="@android:color/transparent"
                        android:hint="Select Standard"
                        android:maxLines="1"
                        android:paddingLeft="9dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@+id/caddress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/sales_no"
                        app:tint="@color/blue"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/subject"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/gst"
                        android:background="@android:color/transparent"
                        android:hint="Select Subject"
                        android:maxLines="1"
                        android:paddingLeft="9dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="13dp" />
                    <ImageView
                        android:id="@+id/gst"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/task"
                        app:tint="@color/blue"/>
                </RelativeLayout>
            </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border">

        <EditText
            android:id="@+id/library_description"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/addressimg19"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Document Description"
            android:inputType="textMultiLine|textCapWords"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="5dp"
            android:paddingBottom="12dp"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/addressimg19"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/task"
            app:tint="#0074AA" />

    </RelativeLayout>

    <Button
        android:layout_marginBottom="10dp"
        android:id="@+id/save_library"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_fill"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"/>

            <Button
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:id="@+id/edit_library"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_fill"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>